@model MessageBoard.ViewModels.MessageViewModel

<h2>Editing message</h2>



<form asp-controller="Message" asp-action="ConfirmEdit" asp-route-messageId="@Model.Message.Id" method="post" role="form">
    <div class="form-group">
        <label asp-for="Message.Text" class="col-md-2 control-label" ></label>
        <div class="col-md-5">
            <input asp-for="Message.Text" class="form-control" />
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-5">
            

           
            
            <input type="submit" class="btn btn-primary" value="Reply" />
        </div>
    </div>
</form>
